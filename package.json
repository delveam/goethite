{
	"name": "@delveam/goethite",
	"version": "0.1.0",
	"description": "JavaScript meets Rust",
	"main": "./dist/goethite.js",
	"module": "./dist/goethite.esm.js",
	"types": "./types/index.d.ts",
	"files": [
		"dist",
		"types"
	],
	"scripts": {
		"format:src": "prettier -w src/**/*.ts",
		"format:dist": "prettier -w dist/goethite.common.js dist/goethite.esm.js dist/goethite.js",
		"format:misc": "prettier -w .eslintrc.json .prettierrc rollup.config.js package.json src/tsconfig.json",
		"format": "npm run format:src && npm run format:dist && npm run format:misc",
		"lint": "eslint --max-warnings 0 src/** --ext .ts",
		"build": "rimraf build && tsc -b src",
		"dist": "rimraf dist && rollup -c rollup.config.js && npm run format:dist",
		"make:build": "tsc -b src",
		"make:dist": "rollup -c rollup.config.js",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/delveam/goethite.git"
	},
	"keywords": [
		"Rust"
	],
	"author": "Marvin Valenzuela",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/delveam/goethite/issues"
	},
	"homepage": "https://github.com/delveam/goethite#readme",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.26.1",
		"@typescript-eslint/parser": "^4.26.1",
		"eslint": "^7.28.0",
		"husky": "^6.0.0",
		"prettier": "^2.3.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.51.1",
		"rollup-plugin-terser": "^7.0.2",
		"typescript": "^4.3.2"
	}
}
